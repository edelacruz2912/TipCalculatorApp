<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eduardo.tipcalculatorapp.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--AmountEntered-->

        <EditText
            android:id="@+id/amountEntered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal" />
        <!--seekBar-->

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:max="15"
            />

        <TextView
            android:id="@+id/SeekBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/seekBar"
            android:layout_alignEnd="@+id/TotalText"
            android:layout_alignRight="@+id/TotalText"
            android:text="@string/SeekBarPercent" />


        <!--Tip-->

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tipText"
            android:layout_alignBottom="@+id/tipText"
            android:layout_centerHorizontal="true"
            android:text="@string/TipAmout" />

        <TextView
            android:id="@+id/tipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TotalText"
            android:layout_alignRight="@+id/TotalText"
            android:layout_below="@+id/SeekBarText"
            android:layout_marginTop="37dp"
            android:text="@string/tipText" />


        <!--BillTotal-->


        <TextView
            android:id="@+id/TotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipText"
            android:layout_marginTop="35dp"
            android:layout_toLeftOf="@+id/seekBar"
            android:layout_toStartOf="@+id/seekBar"
            android:text="@string/BillTotalText" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TotalText"
            android:layout_alignBottom="@+id/TotalText"
            android:layout_centerHorizontal="true"
            android:text="@string/billTotalValue" />


    </RelativeLayout>

</LinearLayout>
